                                                if (image) {
                                                    search_logo = false;
                                                    imageObj1.src = image.url;
                                                    logoBase.src = logo.logo_url;
                                                    baseLogo.setX(logo.x);
                                                    baseLogo.setY(logo.y);
                                                    baseLogo.scale({
                                                        x: logo.multiplexer,
                                                        y: logo.multiplexer
                                                    });

                                                }
                                            } else {
                                                i += 1;
                                                create_entry(i, lim);
                                                layer.draw();
                                            }
                                        },
                                        error: function (data) {
                                            console.log(data);
                                        }
                                    });
                                }
                            };

                            $.ajax({
