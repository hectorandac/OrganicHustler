                                '            </button>\n' +
                                '          </div>\n' +
                                '      </div>';


                            var div = document.createElement('div');
                            div.innerHTML = pre;

                            container_lts.appendChild(div);

                            var id = 'cart' + product['id'];
                            var container = $('#' + id);
                            console.log(container);
                            container.height(container.width());

                            var stage = new Konva.Stage({
                                container: id,
