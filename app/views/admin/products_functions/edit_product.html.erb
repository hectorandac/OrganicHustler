                                console.log(emblem_photo_list);
                            }

                            STAGE = new Konva.Stage({
                                container: 'preview_holder_emblem',
                                width: width,
                                height: height
                            });

                            LAYER = new Konva.Layer();
                            STAGE.add(LAYER);

                            var baseImg = new Konva.Image({
