<body style="background-color: #dedede">

<div class="main">
  <div style="margin: 20px; padding: 20px; overflow: hidden" class="card content-part-10">

    <div class="input-group">
      <span class="input-group-addon" id="basic-addon1">Title</span>
      <input id="title" value="<%= @categories.title %>" class="form-control" aria-describedby="basic-addon1">
    </div>

    <button onclick="create()" style="width: 100%" class="btn btn-warning">MODIFY</button>

  </div>
</div>

<script>

    function create() {
        $.ajax({
            url: '/categories',
            type: 'patch',
            dataType: 'json',
            data: {
                id: '<%= @categories .id %>',
                taxes: {
                    title: document.getElementById('title').value
                }
            },
            success: function (data) {

                window.location.href = '/admin/taxes';
            },
            error: function (data) {

            }
        });
    }

</script>

</body>