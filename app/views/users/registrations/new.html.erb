<div>
  <div class="card login-form">
    <h2>Sign up</h2>
    <hr style="width:12%; margin: 17px auto 50px;border-color: black">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <%= devise_error_messages! %>

        <div class="field">
          <input class="serious-input" placeholder="First name" autofocus="autofocus" value="" name="user[user_name]" id="user_user_name" type="text">
        </div>

        <div class="field">
          <input class="serious-input" placeholder="Last name" value="" name="user[user_last_name]" id="user_user_last_name" type="text">
        </div>

        <div class="field">
          <input class="serious-input" placeholder="Email" value="" name="user[email]" id="user_email" type="email">
        </div>

        <div class="field">
          <input class="serious-input" placeholder="Password" autocomplete="off" name="user[password]" id="user_password" type="password">
        </div>

        <div class="field">
          <input class="serious-input" placeholder="Confirm password" autocomplete="off" name="user[password_confirmation]" id="user_password_confirmation" type="password">
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: 'btn btn-sp submit-btn-form' %>
        </div>
    <% end %>
    <div style="margin: 10px" class="link-wrap">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>