<!DOCTYPE html>
<html>
  <head>

    <%= csrf_meta_tags %>

    <%= javascript_include_tag 'jquery.min.js' %>
    <%= stylesheet_link_tag 'bootstrap.min.css' %>
    <%= stylesheet_link_tag 'bootstrap.css' %>
    <%= javascript_include_tag 'bootstrap.min' %>
    <%= stylesheet_link_tag 'bootstrap-theme.min.css' %>
    <%= javascript_include_tag 'dropzone' %>
    <%= stylesheet_link_tag 'dropzone' %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header class="nav navbar" style="overflow: visible; z-index:9999999; width: 100%">

    <div style="margin: 20px">

      <button style="float: left" type="button" class="btn btn-default" aria-label="Left Align">
        <i class="fa fa-bars" aria-hidden="true"></i>
      </button>

      <% if user_signed_in? %>
          <div class="dropdown" style="float: right">
            <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
              <span class="fa fa-user" aria-hidden="true"></span>
            </button>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
              <a class="dropdown-item" href="#">Action</a>
              <a class="dropdown-item" href="#">Another action</a>
              <a class="dropdown-item" href="#">Something else here</a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="/users/sign_out" data-method="delete" rel="nofollow">Log out</a>
            </div>
          </div>
      <% else %>

          <a class="btn btn-default" href="/users/sign_in" data-method="get" rel="nofollow" style="float: right; margin: 2px;">Log in</a>

      <% end %>

      <div style="margin: 0 auto; width: 70%; max-width: 700px;">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search for...">
          <span class="input-group-btn">
          <button class="btn btn-default" type="button">Go!</button>
        </span>
        </div><!-- /input-group -->
      </div><!-- /.col-lg-6 -->


    </div>
  </header>

  <%= yield %>

</html>
